@using Pierre.Models;

<h1>Your Vendors:</h1>

@if (@Model.Count == 0)
{
  <h2>You do not currently have any Vendors listed sir. Please add some soon.</h2>
}

<ul>
@foreach (Vendor vendor in Model)
{
  <li><a href='/vendors/@vendor.Id'>@vendor.Name</a></li>
}
</ul>

<p><a href='/'>Back to Home Page.</a></p>
